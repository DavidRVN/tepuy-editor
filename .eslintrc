{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    "indent": ["warn", 4],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"]
  }
}
